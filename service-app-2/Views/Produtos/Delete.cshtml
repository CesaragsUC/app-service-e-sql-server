@model service_app_2.Dtos.ProdutoDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem cereza que deseja deletar?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <form enctype="multipart/form-data" method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
        </dl>
        <div class="form-group">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a class="btn btn-info" asp-action="Index" asp-controller="Produtos" data-abc="true">Inicio</a>
        </div>
    </form>
</div>
